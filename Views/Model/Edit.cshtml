@model Imaginary_Dealer.Models.ViewModels.ModelViewModel;
@using Imaginary_Dealer.Extension
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>


<!DOCTYPE html>
<html>

<body>

    <div class="container mt-5">
        <h4 class="mb-4">Edit model</h4>
        <h4 class="text-info mb-4">Add model of Vehicle</h4>

        <form method="post" action="Edit">
            <input hidden asp-for="Model.Id"/>
            <div class="form-group row">

                <div class="col-2">
                    <label asp-for="Brands" class="form-control"> </label>
                </div>
                <div class="col-md-4">

                    <select asp-for="Model.BrandId" asp-items="Model.Brands.ToSelectListItem()" class="form-control "></select>
                </div>
                <br />
                <br />

                    <div col-md-6>
                            <div class="form-group row">

                                <div class="col-2">
                               <label asp-for="Model.Name"> </label>
                                </div>
                                
                                
                                <div class="col-4">
                                    <input asp-for="Model.Name" class="form-control" />
                                </div>
               
                            </div>

                            <br />

                           
                     </div col-md-6>
                <div class="form-group col-md-6">
                    <input type="submit" class="btn btn-primary" value="Update" />
                    <a asp-action="Index" class="btn btn-success">Back to Home</a>
                </div>

               

            </div>
        </form>
    </div>


</body>
</html>
